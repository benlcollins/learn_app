<div class="single-col-content job-content">

	<p class="breadcrumb">
		<%= link_to "Home", links_path %> / Job details
	</p>

	<%= render partial: 'save_job_buttons' %>

	<h1><%= @result["title"] %></h1>
	<h2><%= @result["company"] %></h2>

	<ul>
		<li><%= @result["location"] %></li>
		<li><%= @result["type"] %></li>
	</ul>

	<%= raw @result["description"] %>

	<h2>How to apply:</h2>

	<%= raw @result["how_to_apply"] %>

</div>